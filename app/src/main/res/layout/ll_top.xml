<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp300"
        android:background="@color/white"
        app:image_scale_type="center_crop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp4"
            android:maxLines="3"
            android:textColor="@color/tvc292929"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            tools:text="asdadas" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp4"
            android:padding="@dimen/dp10"
            android:textColor="@color/tvc292929"
            android:textSize="@dimen/sp14"
            tools:text="asdadas" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/tvc292929"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                tools:text="asdadas" />

            <TextView
                android:id="@+id/tv_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp6"
                android:layout_toEndOf="@+id/tv_my_money"
                android:textColor="#f00"
                android:textSize="@dimen/sp12"
                tools:text="asdadas" />


            <TextView
                android:id="@+id/tv_sell_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="#999"
                android:textSize="@dimen/sp12"
                tools:text="asdadas" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp14">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/details_complete" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp6"
            android:text="0.0.0.0.0.0"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_arguments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp14">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="参数"
            android:textColor="@color/tvc292929"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:layout_width="@dimen/dp10"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/right" />

    </LinearLayout>


</LinearLayout>